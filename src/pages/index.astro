---
import { SEO } from "astro-seo";
import { ViewTransitions } from "astro:transitions";
interface Props {
  title: string;
  desc: string;
  ogTitle: string;
}
const { title, desc, ogTitle } = Astro.props;
---

<html lang="en">
	<head>
		<SEO
		title={title}
		titleTemplate="%s | Portfolio"
		description={desc}
		nofollow={true}
		charset="UTF-8"
		openGraph={{
		  basic: {
			title: ogTitle,
			type: "website",
			image:
			  "https://user-images.githubusercontent.com/5182256/131216951-8f74f425-f775-463d-a11b-0e01ad9fce8d.png",
		  },
		  optional: {
			description: desc,
			locale: "en_US",
			siteName: "Molly Scott's UX Portfolio",
		  },
		  image: {
			type: "image/png",
			width: 1280,
			height: 720,
			alt: "Molly Scott: UX Design and Research Logo",
		  },
		}}
		extend={{
		  link: [{ rel: "icon", type: "image/x-icon", href: "/favicon.ico" }],
		  meta: [
			{ name: "viewport", content: "width=device-width,initial-scale=1" },
			{ name: "generator", content: Astro.generator },
		  ],
		}}
	  />
	  <ViewTransitions />
	</head>
	<body>
		<h1>Astro</h1>
	</body>
</html>
